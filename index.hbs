{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
          
<div class="background-scroller" style="background-image: url({{@blog.cover}});"></div>
<div class="filter-scroller"></div>
<div class="featured-background">
    <div class="container featured-block">
        <h1 class="featured-title">{{@blog.description}}</h1>
        <a class="call-to-action" href="/about">LEARN MORE</a>
    </div>
</div>     

{{! The main content area on the homepage }}
<main class="content" role="main">

    {{! The tag below includes the posts loop - partials/posts.hbs }}
    
    <div class="container post-list">
        {{> "posts"}}
    </div>
    
</main>
